/* pages/home/home.wxss */

page {
  height: 100%;
}

.home-container {
  height: 100%;
}

.weui-search-bar__cancel-btn {
  font-size: 16px;
}
.slide-image {
  width: 100%;
  height: 200px;
}

swiper {
  height: 200px;
}

.home-main {
  background-color: #f5f3f3;
  overflow: hidden;
}

.main-nav-container {
  height: 180px;
  margin-top: 10px;
  margin-bottom: 10px;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  background-color: #ffffff;
}

main-nav-container > image {
  width: 750rpx;
  height: 160px;
}

.main-nav {
  width: 75px;
  height: 80px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.nav-img {
  width: 38px;
  height: 38px;
  background-color: #f0ecec;
  border-radius: 50%;
}

.nav-text {
  font-size: 12px;
}

.main-content {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
}

.main-content-goods {
  width: 176px;
  height: 240px;
  background-color: #ffffff;
  margin-bottom: 10px;
  border-radius: 10px;
  overflow: hidden;
  position: relative;
}

.goods-img {
  width: 180px;
  height: 180px;
}

.goods-title {
  font-size: 14px;
  margin-left: 10px;
}

.goods-price {
  font-size: 16px;
  margin-left: 10px;
  color: #ff0000;
}

.goods-dec {
  position: absolute;
  bottom: 10px;
  right: 15px;
  padding: 2px 10px;
  border: 1px solid #ff0000;
  font-size: 12px;
  border-radius: 7px;
  color: #ff0000;
}

.noMore {
  text-align: center;
  font-size: 16px;
  color: #ee8080;
}