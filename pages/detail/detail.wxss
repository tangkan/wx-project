/* pages/cart/cart.wxss */
@import './icon.wxss';

.slide-image {
  width: 100%;
  height: 300px;
}

swiper {
  height: 300px;
}

.goods-info {
  padding: 12px;
}

.goods-price {
  border-bottom: 1px solid #e4e4e4;
  padding-bottom: 10px;
  font-size: 20px;
  color: #ff0000;
}

.goods-title {
  margin-top: 10px;
  
}

.goods-dec {
  margin-top: 10px;
  font-size: 14px;
  color: #969191;
}

.footer {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  height: 50px;
  text-align: center;
  line-height: 50px;
  border-top: 1px solid #dedede;
}

.shouchang {
  width: 20%;
  border-right: 1px solid #dedede;
}

.cart {
  width: 20%;
  font-size: 20px;
  position: relative;
}

.addToCart {
  width: 40%;
  background-color: #ee1d168c;
  color: #ffffff;
}

.goumai {
  width: 40%;
  color: #ffffff;
