/* pages/cart/cart.wxss */
@import './icon.wxss'

page {
  background-color: #f7f4f4;
  height: 100%;
}

.main {
  height: 100%;
  margin-bottom: 50px;
}

.no-goods {
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.goToHome {
  color: #ff0000;
}

.header {
  border-top: 1px solid #dedede;
  margin-top: 10px;
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  padding-left: 10px;
  background-color: #f8f4f4
}


.goods-cart {
  width: 100%;
  height: 100px;
  padding: 10px 0;
  margin-top: 5px;
  background-color: #ffffff;
  position: relative;
}

.goods-cart > checkbox-group{
  position: absolute;
  top: 42px;
  left: 20px;
}

.goods {
  width: 80%;
  height: 100%;
  padding-right: 10px;
  float: right;
  position: relative;
}

.goods > image {
  width: 100px;
  height: 100px;
}

.goods-title {
  width:200px;
  height: 30px;
  background-color: #ffffff;
  position: absolute;
  right: 5px;
  top: 5px;
}

.goods-price {
  width:100px;
  height: 20px;
  position: absolute;
  left: 105px;
  top: 40px;
  font-size: 16px;
  line-height: 20px;
  color: #ff0000;
}

.count {
  width:100px;
  height: 30px;
  position: absolute;
  left: 105px;
  bottom: 2px;
  display: flex;
  justify-content: space-around;
  border-radius: 10px;
  border: 1px solid #dedede;
}
.count > text {
  width: 33%;
  text-align: center;
}
.count-content {
  border-left: 1px solid #dedede;
  border-right: 1px solid #dedede;
}

.icon {
  position: absolute;
  right: 12px;
  bottom: -2px;
}

.footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-around;
  text-align: center;
  height: 50px;
  background-color: #ffffff;
  border-top: 1px solid #dedede;
}

.checkAll {
  width: 20%;
  line-height:50px;
  padding-left: 20px;
}

.allPrice {
  width:50%;
}

.cart-order {
  width: 30%;
  line-height: 50px;
  background-color: #ff0000;
  color: #ffffff;
}

.allPrice > view {
  height: 50%;
  font-size: 14px;
}