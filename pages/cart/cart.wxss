/* pages/cart/cart.wxss */
@import './icon.wxss'

page {
  background-color: #f7f4f4;
  height: 100%;
}

.main {
  height: 100%;
  margin-bottom: 50px;
}

.no-goods {
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.goToHome {
  color: #ff0000;
}

.header {
  border-top: 1px solid #dedede;
  margin-top: 10px;
  height: 30px;
  line-height: 30px;
  font-size: 16px;
  padding-left: 10px;
  background-color: #f8f4f4
}


.goods-cart {
  width: 100%;
  height: 100px;
  padding: 10px 0;
  margin-top: 5px;
  background-color: #ffffff;
  position: relative;
}

.goods-cart > checkbox-group{
  position: absolute;
  top: 42px;
  left: 20px;
}

.goods {
  width: 80%;
  height: 100%;
  padding-right: 10px;
  float: right;
  position: relative;
}

.goods > image {
  width: 200rpx;
  height: 200rpx;
}

.goods-title {
  width:400rpx;
  height: 60rpx;
  background-color: #ffffff;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

.goods-price {
  width: 200rpx;
  height: 40rpx;
  position: absolute;
  left: 210rpx;
  top: 80rpx;
  font-size: 32rpx;
  line-height: 40rpx;
  color: #ff0000;
}

.count {
  width: 200rpx;
  height: 60rpx;
  position: absolute;
  left: 210rpx;
  bottom: 4rpx;
  display: flex;
  justify-content: space-around;
  border-radius: 20rpx;
  border: 1px solid #dedede;
}
.count > text {
  width: 33%;
  text-align: center;
}
.count-content {
  border-left: 1px solid #dedede;
  border-right: 1px solid #dedede;
}

.icon {
  position: absolute;
  right: 24rpx;
  bottom: -4rpx;
}

.footer {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-around;
  text-align: center;
  height: 100rpx;
  background-color: #ffffff;
  border-top: 1px solid #dedede;
}

.checkAll {
  width: 20%;
  line-height: 100rpx;
  padding-left: 40rpx;
  font-size: 36rpx;
}

.allPrice {
  width:50%;
}

.cart-order {
  width: 30%;
  line-height: 100rpx;
  background-color: #ff0000;
  color: #ffffff;
}

.allPrice > view {
  height: 50%;
  font-size: 28rpx;
}